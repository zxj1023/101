<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <nine-patch android:src="@drawable/detail_download_btn_downloading"></nine-patch>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <padding android:bottom="7dp"></padding>
                <corners android:radius="22dp" />
                <gradient
                    android:angle="270"
                    android:endColor="#ff535d"
                    android:startColor="#fc6a57" />

                <size
                    android:width="88dp"
                    android:height="44dp" />
            </shape>
        </clip>
    </item>

</layer-list>
