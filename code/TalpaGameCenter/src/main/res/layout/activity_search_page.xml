<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
        android:id="@+id/replacement_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginBottom="32dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/change"
                android:textColor="#8d8d8d"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/refresh_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/refresh"
                android:visibility="gone"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/recommend_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/corner_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recommend_0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_corner_all_recommend1"
                    android:gravity="center_vertical"
                    android:maxWidth="160dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:singleLine="true"
                    android:textColor="#505050"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/recommend_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_corner_all_recommend2"
                    android:gravity="center_vertical"
                    android:maxWidth="160dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:singleLine="true"
                    android:textColor="#505050"
                    android:textSize="14sp">

                </TextView>

                <TextView
                    android:id="@+id/recommend_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_corner_all_recommend3"
                    android:gravity="center_vertical"
                    android:maxWidth="160dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:singleLine="true"
                    android:textColor="#505050"
                    android:textSize="14sp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/corner_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recommend_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_corner_all_recommend1"
                    android:gravity="center_vertical"
                    android:maxWidth="160dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:singleLine="true"
                    android:textColor="#505050"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/recommend_4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_corner_all_recommend2"
                    android:gravity="center_vertical"
                    android:maxWidth="160dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:singleLine="true"
                    android:textColor="#505050"
                    android:textSize="14sp">

                </TextView>

                <TextView
                    android:id="@+id/recommend_5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_corner_all_recommend3"
                    android:gravity="center_vertical"
                    android:maxWidth="160dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:singleLine="true"
                    android:textColor="#505050"
                    android:textSize="14sp"></TextView>

            </LinearLayout>
        </LinearLayout>
     </LinearLayout>

        <LinearLayout
        android:id="@+id/search_history_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="History"
                android:textColor="#8d8d8d"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/clear_history_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/delete_recommend" />
        </RelativeLayout>

        <tran.com.android.tapla.gamecenter.widget.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/history_0"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_corner_all_history1"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:maxWidth="160dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:singleLine="true"
                android:textColor="#505050"
                android:textSize="14sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/history_1"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_corner_all_history2"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:maxWidth="160dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:singleLine="true"
                android:textColor="#505050"
                android:textSize="14sp"
                android:visibility="gone"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/history_2"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/shape_corner_all_history3"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:maxWidth="160dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:singleLine="true"
                android:textColor="#505050"
                android:textSize="14sp"
                android:visibility="gone"/>

        </tran.com.android.tapla.gamecenter.widget.FlowLayout>
    </LinearLayout>

        <View
            android:id="@+id/bottom_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:id="@+id/mark_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alpha_10_white"
        android:visibility="gone" />
</FrameLayout>
