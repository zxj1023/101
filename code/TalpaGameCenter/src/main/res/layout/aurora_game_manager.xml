<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="64dp"
              android:orientation="vertical"
    >
    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/aurora_setting_line_color"></View>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/aurora_setting_margin"
        android:background="@color/aurora_setting_margin_color"></View>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/aurora_setting_line_color"></View>
    <LinearLayout
        android:id="@+id/game_update_linear"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:src="@drawable/manager_update"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/aurora_manager_margin_start"
            android:textSize="@dimen/aurora_manager_size"
            android:textColor="@color/aurora_setting_text_color"
            android:text="@string/app_update_check_pref"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/update_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/message_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="10.0dip"
                android:visibility="gone"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/list_arrow_right"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/aurora_setting_line_color"></View>
    <LinearLayout
        android:id="@+id/game_down_linear"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:src="@drawable/manager_down_load"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/aurora_manager_margin_start"
            android:textSize="@dimen/aurora_manager_size"
            android:textColor="@color/aurora_setting_text_color"
            android:text="@string/download_manager_pref"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/download_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/message_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="10.0dip"
                android:visibility="gone"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/list_arrow_right"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/aurora_setting_line_color"></View>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/aurora_setting_margin"
        android:background="@color/aurora_setting_margin_color"></View>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/aurora_setting_line_color"></View>
    <LinearLayout
        android:id="@+id/game_setting_linear"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:src="@drawable/manager_setting"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/aurora_manager_margin_start"
            android:textSize="@dimen/aurora_manager_size"
            android:textColor="@color/aurora_setting_text_color"
            android:text="@string/settings_pref"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/message_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="10.0dip"
                android:visibility="gone"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/list_arrow_right"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/aurora_setting_line_color"></View>
</LinearLayout>