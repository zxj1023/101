<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
	 android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/note_main_list_bg"
    >    
	<ProgressBar 
		android:id="@+id/listview_foot_progress" 
		style="?android:attr/progressBarStyleSmall"
		android:layout_width="wrap_content"
      android:layout_height="wrap_content"
		/>
    <TextView
    	android:id="@+id/listview_foot_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/footer_to_refresh_bottom"
        android:textColor="@color/app_item_count_size_color"
        android:text="@string/loading"/>

</LinearLayout>