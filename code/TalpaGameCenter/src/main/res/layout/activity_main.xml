<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/aurora_action_bar_search_view_height" >

        <include layout="@layout/view_page_loading" />
    </LinearLayout>

    <tran.com.android.tapla.gamecenter.market.widget.ViewPagerListView
        android:id="@+id/lv_app"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <tran.com.android.tapla.gamecenter.market.widget.MainTabView
        android:id="@+id/frame_main_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="213dp"
        android:visibility="gone"/>
</FrameLayout>