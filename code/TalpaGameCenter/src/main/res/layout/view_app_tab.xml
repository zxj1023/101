<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/homepage_tabview_height"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/homepage_tabview_height"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/tab_new"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_new_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/homepage_tabview_text_margin_img"
                android:gravity="center"
                android:text="@string/tab_new"
                android:textColor="@color/tab_text_color"
                android:textSize="@dimen/textsize_16" />
        </LinearLayout>
        
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/homgpage_tabview_line_margin_topbottom"
            android:layout_marginTop="@dimen/homgpage_tabview_line_margin_topbottom"
            android:background="@color/line_grey" />

        <LinearLayout
            android:id="@+id/tab_special"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_special_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/homepage_tabview_text_margin_img"
                android:gravity="center"
                android:text="@string/tab_special"
                android:textColor="@color/tab_text_color"
                android:textSize="@dimen/textsize_16" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/homgpage_tabview_line_margin_topbottom"
            android:layout_marginTop="@dimen/homgpage_tabview_line_margin_topbottom"
            android:background="@color/line_grey" />

        <LinearLayout
            android:id="@+id/tab_ranking"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_ranking_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/homepage_tabview_text_margin_img"
                android:gravity="center"
                android:text="@string/tab_ranking"
                android:textColor="@color/tab_text_color"
                android:textSize="@dimen/textsize_16" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/homgpage_tabview_line_margin_topbottom"
            android:layout_marginTop="@dimen/homgpage_tabview_line_margin_topbottom"
            android:background="@color/line_grey" />

        <LinearLayout
            android:id="@+id/tab_category"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_category_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/homepage_tabview_text_margin_img"
                android:gravity="center"
                android:text="@string/tab_category"
                android:textColor="@color/tab_text_color"
                android:textSize="@dimen/textsize_16" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/tab_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_grey"
        android:visibility="gone" />

</LinearLayout>