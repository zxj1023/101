<resources>
    <style name="TalpaOssdk.Bottom.Dialog.Animation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/talpaossdk_bottom_popup_window_slide_in</item>
        <item name="android:windowExitAnimation">@anim/talpaossdk_bottom_popup_window_slide_out</item>
    </style>

    <style name="TalpaOssdk_Dialog_Horizontal_Divider" parent="@style/TalpaOssdk_Normal_Horizontal_Divider">
        <item name="android:background">@color/talpaossdk_dialog_divider_color</item>
    </style>

    <style name="TalpaOssdk_Normal_Horizontal_Divider" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/talpaossdk_divider_wh</item>
        <item name="android:background">@color/talpaossdk_btn_divider_color</item>
    </style>

    <style name="TalpaOssdk_Dialog_Content_Style">
        <item name="android:textSize">@dimen/talpaossdk_dialog_content_textsize</item>
        <item name="android:textColor">@color/talpaossdk_dialog_content_textcolor</item>
    </style>

    <style name="TalpaOssdk_Dialog_SubTitle_Style">
        <item name="android:textSize">@dimen/talpaossdk_dialog_subtitle_textsize</item>
        <item name="android:textColor">@color/talpaossdk_dialog_content_textcolor</item>
    </style>

    <style name="TalpaOssdk.TextAppearance.Material.Widget.PopupMenu.Large" parent="@android:style/TextAppearance.Material.Widget.PopupMenu.Large">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#505050</item>
    </style>

    <style name="TalpaOssdk.Widget.Material.ListPopupWindow" parent="@android:style/Widget.Material.ListPopupWindow">
        <item name="android:dropDownHorizontalOffset">-40dip</item>
        <item name="android:dropDownVerticalOffset">10dip</item>
        <item name="android:popupElevation">2dp</item>
        <item name="android:popupBackground">@drawable/talpaossdk_popupwindow_bg</item>
        <item name="android:overlapAnchor">true</item>
    </style>

    <style name="TalpaOssdk.Widget.Material.ListView.DropDown" parent="@android:style/Widget.Material.ListView.DropDown">
        <item name="android:listSelector">@drawable/talpaossdk_item_selector</item>
    </style>

    <style name="TalpaOssdk.Widget.CompoundButton.Switch"  parent="@android:style/Widget.CompoundButton">
        <item name="android:thumb">@drawable/talpaossdk_switch_thumb</item>
        <item name="android:track">@drawable/talpaossdk_switch_track</item>
        <item name="android:showText">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:textOn">on</item>
        <item name="android:textOff">off</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.TalpaOssdk" parent="@android:style/Widget.DeviceDefault"></style>

    <style name="TalpaOssdk.Widget.Ossdk.Switch" parent="@style/Widget.TalpaOssdk">
        <item name="talpaossdkThumb">@drawable/talpaossdk_switch_thumb2</item>
        <item name="talpaossdkTrack">@drawable/talpaossdk_switch_track</item>
        <item name="talpaossdkSwitchMinWidth">48dip</item>
        <item name="talpaossdkSplitTrack">false</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TalpaOssdk.Widget.SwitchPreference" parent="@style/Widget.TalpaOssdk">
        <item name="android:widgetLayout">@layout/talpaossdk_preference_widget_switch</item>
    </style>

    <style name="TalpaOssdk.Widget.Material.Light.ListView" parent="@android:style/Widget.Material.Light.ListView">
        <item name="android:listSelector">@drawable/talpaossdk_item_selector</item>
    </style>

    <style name="TalpaOssdk.TextAppearance.Material.Large" parent="@android:style/TextAppearance.Material.Large">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TalpaOssdk_Dialog_Title_TextAppearance" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:textColor">@color/talpaossdk_dialog_title_textcolor</item>
        <item name="android:textSize">@dimen/talpaossdk_dialog_title_textsize</item>
    </style>
</resources>
