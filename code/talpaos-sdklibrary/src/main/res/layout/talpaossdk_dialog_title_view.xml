<!--
    This layout file is used by the AlertDialog when displaying a list of items.
    This layout file is inflated and used as the TextView to display individual
    items.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/talpaossdk_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingTop="@dimen/talpaossdk_dialog_title_container_paddingTop"
        android:fontFamily="roboto-medium"
        android:paddingLeft="@dimen/talpaossdk_dialog_content_paddingLR"
        android:paddingRight="@dimen/talpaossdk_dialog_content_paddingLR"
        android:textAppearance="@style/TalpaOssdk_Dialog_Title_TextAppearance"/>
    <View android:id="@+id/talpaossdk_dialog_title_divider"
        style="@style/TalpaOssdk_Dialog_Horizontal_Divider"/>
</LinearLayout>

