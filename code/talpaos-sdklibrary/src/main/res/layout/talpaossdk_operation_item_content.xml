<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/talpaossdk_operation_item_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:duplicateParentState="true">
        <ImageView android:id="@+id/talpaossdk_item_iv"
            android:layout_width="@dimen/talpaossdk_operation_item_icon_wh"
            android:layout_height="@dimen/talpaossdk_operation_item_icon_wh"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:duplicateParentState="true"/>

        <TextView android:id="@+id/talpaossdk_item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/talpaossdk_operation_item_textsize"
            android:textColor="@color/talpaossdk_operation_item_textcolor_selector"
            android:layout_marginTop="2dip"
            android:gravity="center_horizontal"
            android:duplicateParentState="true"/>
    </LinearLayout>
</merge>